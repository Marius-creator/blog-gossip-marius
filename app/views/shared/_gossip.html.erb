<% obj.each do |gossip| %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="well well-lg">
        <div class="gossip-title">
          <%= link_to gossip.title, gossip_path(gossip) %>
        </div>
        <div class="gossip-body">
          <%= truncate(gossip.content, length: 100) %>
          <div class="gossip-meta-details">
          <small>Created by: <%= gossip.user.username if gossip.user %>,
                    <%= time_ago_in_words(gossip.created_at) %> ago,
                    last updated: <%= time_ago_in_words(gossip.updated_at) %> ago</small>
          </div>
        </div>
        <div class="gossip-actions">
          <%= link_to "Edit", edit_gossip_path(gossip), class: "btn btn-xs btn-primary" %>
          <%= link_to "Delete", gossip_path(gossip), method: :delete, data: { confirm: "Are you sure you want to delete this gossip?"}, class: "btn btn-xs btn-danger" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
