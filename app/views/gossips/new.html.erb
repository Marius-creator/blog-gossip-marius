<h1>Create a new gossip</h1>


<% if @gossip.errors.any? %>
 <h2>The following errors prevented the article from saving:</h2>
 <ul>
 <% @gossip.errors.full_messages.each do |msg|%>
 <li><%= msg %></li>
 <% end %>
 </ul>
<% end %>

<%= form_for @gossip do |f| %>
<p>
  <%= f.label :title %>
  <%= f.text_field :title %>
 </p>
   <p>
   <%= f.label :content %><br>
   <%= f.text_area :content %>
  </p>
  <p>
   <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', gossips_path %>
