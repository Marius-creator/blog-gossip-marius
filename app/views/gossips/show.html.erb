<h2 align="center">Title: <%= @gossip.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
 <% if @gossip.user %>
 <ul class="listing">
  <div class="row" align="center">
   <div class="col-md-4 col-md-offset-4">
    <li><%= link_to gravatar_for(@gossip.user), user_path(@gossip.user) %></li>
    <li class="gossip-title"><%= link_to @gossip.user.username, user_path(@gossip.user) %></li>
    <li><small><%= pluralize(@gossip.user.gossips.count, "gossip") if @gossip.user.gossips %></small></li>
   </div>
  </div>
 </ul>
 <% end %>
 <h4 class="center content"><strong>content:</strong></h4>
 <hr>
 <%= simple_format(@gossip.content) %>
 <div class="gossip-actions">
 <%= link_to "Edit", edit_gossip_path(@gossip), class: "btn btn-xs btn-primary" %>
 <%= link_to "Delete", gossip_path(@gossip), method: :delete, data: { confirm: "Are you sure you want to delete this gossip?"}, class: "btn btn-xs btn-danger" %>
 <%= link_to "Back", gossips_path, class: "btn btn-xs btn-success" %>
 </div>
</div>
